= link_to "PAL Moanalua", root_path, :class => 'brand'
.nav-collapse.in.collapse{:style => "height:auto;"}
  %ul.nav
    - if user_signed_in?
      - if current_user.has_role?(:manager) || current_user.has_role?(:admin)
        - if controller.class.name =~ /^Registrations/
          %li.active
            = link_to 'Registrations', baseballs_path
        -else
          %li
            = link_to 'Registrations', baseballs_path
    - if user_signed_in?
      %li
        = link_to 'Logout', destroy_user_session_path, :method=>'delete'
    - if user_signed_in?
      %li
        = link_to 'Edit account', edit_user_registration_path
      - if current_user.has_role? :admin
        %li
          = link_to 'Admin', users_path
